doctype html
head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    block head
    link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Noto+Serif:400,700,400italic|Open+Sans:700,400')
    //INJECT:styles:default
    //END INJECT
    //INJECT:scripts:default
    //END INJECT
    style(type='text/css').
      #header-wrapper {
        background-image: url("#{settings.website.bannerImage}");
      }
body
    header#header-wrapper.header-wrapper
        .header-content
        .header-brand
            .header-brand-img
                img(src="/public/img/brand_logo.jpg")
            .header-brand-title
                a(href="/")= settings.website.title
            .header-brand-headline!= settings.website.headline
        .header-social
           include partials/mainMenu
           // if settings.social.twitter.username
           //     div(style="text-align: center")
           //         a.twitter-follow-button(href="https://twitter.com/#{settings.social.twitter.username}", data-show-count="false",data-lang="en")
           //             | Follow @#{settings.social.twitter.username}
           if settings.social.twitter.username
             a.fa.fa-twitter(href="https://twitter.com/#{settings.social.twitter.username}", target="_blank")
           if settings.social.linkedin.username
             a.fa.fa-linkedin(href="https://www.linkedin.com/in/#{settings.social.linkedin.username}", target="_blank")
           if settings.social.github.username
             a.fa.fa-github(href="https://github.com/#{settings.social.github.username}", target="_blank")
    main#page-content-wrapper
        .content-header.visible-xs.visible-sm
            a.btn.btn-default#menu-toggle(type="button",href="#")
                span.glyphicon.glyphicon-th-list
            h1.title
                = settings.website.title
        .page-content
            block main
    footer
      section
        | 
        a(href="http://github.com/johnbrett/hadron-theme-shade", target="_blank") Hadron Shade Theme 
        | created by 
        a(href="http://johnbrett.me", target="_blank") John Brett
      section
        | This site is proudly powered by 
        a(href="https://github.com/hadronjs/hadron", target="_blank") Hadron
